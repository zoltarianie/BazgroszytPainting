<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zoltarianie.bazgroszytpainting" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseCategory"
            android:label="@string/title_activity_choose_category"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".ChooseColoringBook"
            android:label="@string/title_activity_choose_coloring_book"
            android:parentActivityName=".ChooseCategory"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zoltarianie.bazgroszytpainting.ChooseCategory" />
        </activity>
        <activity
            android:name=".DrawingColoringBook"
            android:label="@string/title_activity_drawing_coloring_book"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>
